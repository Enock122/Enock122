        <!-- Payment Popup -->
        <div id="paymentPopup" class="popup">
            <h2>Payment</h2>
            <form id="paymentForm">
                <label for="paymentMethod">Select Payment Method:</label>
                <select id="paymentMethod" name="paymentMethod" onchange="showPaymentDetails()">
                    <option value="creditCard">Credit/Debit Card</option>
                    <option value="mpesa">M-Pesa</option>
                    <option value="paypal">PayPal</option>
                </select>
                <div id="paymentDetails">
                    <!-- Details for Credit/Debit Card -->
                    <div id="creditCardDetails">
                        <label for="cardNumber">Card Number:</label>
                        <input type="text" id="cardNumber" name="cardNumber">
                        <br><br>
                        <label for="expiryDate">Expiry Date:</label>
                        <input type="text" id="expiryDate" name="expiryDate">
                        <br><br>
                        <label for="cvv">CVV:</label>
                        <input type="text" id="cvv" name="cvv">
                    </div>
                    <!-- Details for M-Pesa -->
                    <div id="mpesaDetails" style="display:none;">
                        <label for="phoneNumber">Phone Number:</label>
                        <input type="text" id="phoneNumber" name="phoneNumber">
                        <br><br>
                        <label for="mpesaPin">M-Pesa PIN:</label>
                        <input type="text" id="mpesaPin" name="mpesaPin">
                    </div>
                    <!-- Details for PayPal -->
                    <div id="paypalDetails" style="display:none;">
                        <label for="paypalEmail">PayPal Email:</label>
                        <input type="email" id="paypalEmail" name="paypalEmail">
                    </div>
                </div>
                <br>
                <input type="button" value="Pay Now" onclick="processPayment()">
            </form>
            <button onclick="closePopup('paymentPopup')">Close</button>
        </div>

        <!-- Cart Update Popup -->
        <div id="cartPopup" class="popup">
            <p>Item added to cart!</p>
            <button onclick="closePopup('cartPopup')">Close</button>
        </div>
    </div>

    <script>
        // Initialize cart and user status
        let cart = [];
        let userLoggedIn = false; // Simulates whether a user is logged in

        document.querySelectorAll('.add-to-cart').forEach(button => {
            button.addEventListener('click', function() {
                if (!userLoggedIn) {
                    // Show sign-in popup
                    document.getElementById('signInPopup').classList.add('show');
                } else {
                    const productElement = this.closest('.product');
                    const name = productElement.getAttribute('data-name');
                    const price = parseInt(productElement.getAttribute('data-price'));

                    // Add to cart
                    cart.push({ name, price });

                    // Update cart display
                    updateCart();

                    // Show cart popup message
                    document.getElementById('cartPopup').classList.add('show');
                    
                    // Hide popup after 2 seconds
                    setTimeout(function() {
                        document.getElementById('cartPopup').classList.remove('show');
                    }, 2000);
                }
            });
        });

        function updateCart() {
            const cartItemsElement = document.getElementById('cartItems');
            const cartTotalElement = document.getElementById('cartTotal');
            
            // Clear existing items
            cartItemsElement.innerHTML = '';

            // Add items to cart
            let total = 0;
            cart.forEach((item, index) => {
                const listItem = document.createElement('li');
                listItem.innerHTML = `${item.name}: KSh ${item.price} <button onclick="removeFromCart(${index})">Remove</button>`;
                cartItemsElement.appendChild(listItem);
                total += item.price;
            });

            // Update total
            cartTotalElement.textContent = `Total: KSh ${total}`;
        }

        function removeFromCart(index) {
            cart.splice(index, 1); // Remove item from cart
            updateCart(); // Update cart display
        }

        function proceedToPayment() {
            // Show payment popup message
            document.getElementById('paymentPopup').classList.add('show');
        }

        function signInUser() {
            // Simulate user sign-in
            const email = document.getElementById('email').value;
            const password = document.getElementById('password').value;

            if (email && password) {
                userLoggedIn = true; // Set user as logged in
                document.getElementById('signInPopup').classList.remove('show'); // Hide sign-in popup
                updateCart(); // Update cart to reflect the addition of items
                document.getElementById('cartPopup').classList.add('show');
                
                // Hide cart popup after 2 seconds
                setTimeout(function() {
                    document.getElementById('cartPopup').classList.remove('show');
                }, 2000);
            }
        }

        function showPaymentDetails() {
            const paymentMethod = document.getElementById('paymentMethod').value;
            
            // Hide all payment detail sections
            document.getElementById('creditCardDetails').style.display = 'none';
            document.getElementById('mpesaDetails').style.display = 'none';
            document.getElementById('paypalDetails').style.display = 'none';
            
            // Show the relevant payment detail section
            if (paymentMethod === 'creditCard') {
                document.getElementById('creditCardDetails').style.display = 'block';
            } else if (paymentMethod === 'mpesa') {
                document.getElementById('mpesaDetails').style.display = 'block';
            } else if (paymentMethod === 'paypal') {
                document.getElementById('paypalDetails').style.display = 'block';
            }
        }

        function processPayment() {
            const paymentMethod = document.getElementById('paymentMethod').value;

            if (paymentMethod === 'creditCard') {
                const cardNumber = document.getElementById('cardNumber').value;
                const expiryDate = document.getElementById('expiryDate').value;
                const cvv = document.getElementById('cvv').value;

                if (cardNumber && expiryDate && cvv) {
                    alert("Payment processed successfully with Credit/Debit Card!");
                } else {
                    alert("Please fill in all credit card details.");
                }
            } else if (paymentMethod === 'mpesa') {
                const phoneNumber = document.getElementById('phoneNumber').value;
                const mpesaPin = document.getElementById('mpesaPin').value;

                if (phoneNumber && mpesaPin) {
                    alert("Payment processed successfully with M-Pesa!");
                } else {
                    alert("Please fill in all M-Pesa details.");
                }
            } else if (paymentMethod === 'paypal') {
                const paypalEmail = document.getElementById('paypalEmail').value;

                if (paypalEmail) {
                    alert("Payment processed successfully with PayPal!");
                } else {
                    alert("Please enter your PayPal email.");
                }
            }

            // Clear cart after payment
            cart = [];
            updateCart();
            document.getElementById('paymentPopup').classList.remove('show'); // Hide payment popup
        }

        function closePopup(popupId) {
            document.getElementById(popupId).classList.remove('show');
        }
    </script>
</body>
